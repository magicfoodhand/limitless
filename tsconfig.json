{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": false,
    "outDir": "build/",
    "rootDir": "./"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}